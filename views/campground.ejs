<!-- Viewing one campground with id -->
<% layout('layouts/boilerplate') %>

<div class="row mb-3">
  <div class="col-6 offset-3">
    <div class="card mx-auto">
      <img src="<%= campground.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h1 class="card-title"><%= campground.title %></h1>
        <small class="text-muted"><%= campground.location %></small>
        <p class="card-text"><%= campground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">$<%= campground.price %>/night</li>
        <!-- <li class="list-group-item">A second item</li>
        <li class="list-group-item">A third item</li> -->
      </ul>
      <div class="card-body">
        <!-- <a class="card-link" href="http://localhost:3000/campgrounds"
          >All Campgrounds</a
        > -->
        <a
          class="card-link btn btn-warning"
          href="http://localhost:3000/campgrounds/<%= campground.id %>/edit"
          >Edit Campground</a
        >
        <form
          class="d-inline"
          action="/campgrounds/<%= campground.id %>?_method=DELETE"
          method="post"
        >
          <button class="btn btn-danger">Delete Campground</button>
        </form>
      </div>
      <div class="card-footer text-muted">2 days ago</div>
    </div>
    <h4 class="mt-5">Leave a Review</h4>
    <form action="#" class="mb-3">
      <div class="mb-3">
        <label for="reviewRating" class="form-label">Rating</label>
        <input
          class="form-range"
          type="range"
          name="reviewRating"
          id="reviewRating"
          min="1"
          max="5"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="reviewBody">Review</label>
        <textarea
          class="form-control"
          name="reviewBody"
          id="reviewBody"
          cols="30"
          rows="3"
        ></textarea>
        <!-- <input type="range" name="review" id="review" min="0" max="5" /> -->
      </div>
      <button class="btn btn-warning">Submit Review</button>
    </form>
  </div>
</div>

