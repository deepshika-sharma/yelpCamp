<!-- Viewing one campground with id -->
<% layout('layouts/boilerplate') %>

<div class="row mb-3">
  <div class="col-6">
    <div class="card mx-auto">
      <img src="<%= campground.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h1 class="card-title"><%= campground.title %></h1>
        <small class="text-muted"><%= campground.location %></small>
        <p class="card-text"><%= campground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">$<%= campground.price %>/night</li>
      </ul>
      <div class="card-body">
        <a
          class="card-link btn btn-warning"
          href="http://localhost:3000/campgrounds/<%= campground.id %>/edit"
          >Edit Campground</a
        >
        <form
          class="d-inline"
          action="/campgrounds/<%= campground.id %>?_method=DELETE"
          method="post"
        >
          <button class="btn btn-danger">Delete Campground</button>
        </form>
      </div>
      <div class="card-footer text-muted">2 days ago</div>
    </div>
    
    
    </div>
      <div class="col-6">
        <h4>Leave a Review</h4>
        <form
      action="http://localhost:3000/campgrounds/<%= campground.id %>/reviews"
      method="post"
      class="mb-3 needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          class="form-range"
          type="range"
          name="rating"
          id="rating"
          min="1"
          max="5"
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea
          class="form-control"
          name="body"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a Review!</div>
      </div>
      <button class="btn btn-warning">Submit Review</button>
    </form>
        
        <% for( let review of campground.reviews) { %>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title">Rating: <%= review.rating %></h5>
              <p class="card-text">Review: <%= review.body %></p>
            </div>
          </div>
  
          <% } %>
      </div>
       
    
    </div>
  </div>
</div>
